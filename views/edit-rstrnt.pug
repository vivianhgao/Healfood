extend default

block append head
    link(rel='stylesheet', type='text/css', href='/css/inputs.css')

block content
    if msg
        .alert.alert-success #{msg}
    form(method='post', enctype="multipart/form-data")
        if r.photo
            img(src=r.photo)
        label Select a photo for the restaurant
        input(type='file', name='photo', placeholder="Photo")
        input(type='name', name='name', placeholder="Name", value=r.name)
        input(type='address', name='address', placeholder='Address', value=r.address)
        textarea(name='description', placeholder='Description')
            if r.description
                | #{r.description}

        button(type='submit') Submit