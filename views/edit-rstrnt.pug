extends parents/form

block append content
    .wrapper
        - urlGoBack = r ? `/restaurants/id/${r._id}` : '/restaurants'
        a.btn(href=urlGoBack) Go back

    form(method='post', enctype="multipart/form-data")
        if r
            img(src=r.photo)
            label Update the photo of the restaurant
            input(type='file', name='photo', placeholder="Photo")
            label Name
            input(type='name', name='name', placeholder="Name", value=r.name)
            label Address
            input(type='address', name='address', placeholder='Address', value=r.address)
            label Description
            textarea(name='description', placeholder='Description') #{r.description}
        else
            label Update the photo of the restaurant
            input(type='file', name='photo', placeholder="Photo")
            input(type='name', name='name', placeholder="Name")
            input(type='address', name='address', placeholder='Address')
            textarea(name='description', placeholder='Description')

        button(type='submit') Submit