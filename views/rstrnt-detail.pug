extends default

block append head
    link(rel='stylesheet', type='text/css', href='/css/inputs.css')

block content
    .detail
        .name #{r.name}
        .photo
            img(src=`${r.photo}`, alt=`${r.name}`)
        a.btn(href=`/edit-restaurant/${r._id}`) Edit this restaurant
        .overview
            .title Overview
            | #{r.description}
        .info
            .title Average Rating
            if r.rating < 0
                | No ratings yet
            .title Address
            a.address(href="/maps")
                i.fas.fa-map-marker-alt
                | #{r.address}


        .Reviews
            .title Reviews

        a.btn(href=`/edit-review/${r._id}`) Add review

